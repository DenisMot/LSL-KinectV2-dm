<Window x:Class="LSL_Kinect.Saisie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSL_Kinect"
        mc:Ignorable="d"
        Title="Saisie" Height="112.5" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="saisie_tb" HorizontalAlignment="Left" Height="23" Margin="10,20,0,0" TextWrapping="Wrap" Text="Nom de l'enregistrement..." VerticalAlignment="Top" Width="272" TextChanged="saisie_tb_TextChanged" GotFocus="saisie_tb_GotFocus"/>
        <Button x:Name="ok_btn" Content="OK" HorizontalAlignment="Left" Margin="49,54,0,0" VerticalAlignment="Top" Width="75" Click="ok_btn_Click"/>
        <Button x:Name="cancel_btn" Content="Annuler" HorizontalAlignment="Left" Margin="178,54,0,0" VerticalAlignment="Top" Width="75" Click="cancel_btn_Click"/>

    </Grid>
</Window>
