<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LSL_Kinect"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             x:Class="LSL_Kinect.App"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <!-- Define default button size -->
        <Style TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="35" />
        </Style>
        <Style TargetType="Ellipse">
            <Setter Property="Width" Value="15" />
            <Setter Property="Height" Value="15" />
        </Style>
        <System:String x:Key="SELECT_ID_COMBOBOX_TOOLTIP">Select an ID to start</System:String>
        <System:String x:Key="SELECT_SEQUENCE_COMBOBOX_TOOLTIP">Select a sequence to start</System:String>
    </Application.Resources>
</Application>